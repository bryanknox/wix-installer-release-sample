<?xml version="1.0" encoding="utf-8"?>

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Fragment>
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="AppShortcutComp">
        <Shortcut Id="StartMenuLink"
                  Name="!(bind.Property.ProductName)"
                  Description="Launch !(bind.Property.ProductName)"
                  Target="[INSTALLFOLDER]$(var.MainExecutableFileName)"
                  Advertise="no"
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="CleanupStartMenu" Directory="ApplicationProgramsFolder" On="uninstall" />
        <RegistryValue Root="HKCU"
                       Key="Software\!(bind.Property.Manufacturer)\!(bind.Property.ProductName)"
                       Name="InstalledFlag"
                       Type="integer"
                       Value="1"
                       KeyPath="yes" />
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
